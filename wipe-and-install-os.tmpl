version: "0.1"
name: wipe_and_partition_disk
global_timeout: 600
tasks:
  - name: "wipe and partition disk"
    worker: "{{.device_1}}"
    volumes:
      - /dev:/dev
      - /dev/console:/dev/console
      - /lib/firmware:/lib/firmware:ro
    actions:
      - name: "disk-wipe"
        image: ubuntu-workflow/disk-wipe:latest
        timeout: 90
      - name: "disk-partition"
        image: ubuntu-workflow/disk-partition:latest
        timeout: 90
        environment:
          MIRROR_HOST: 192.168.1.2
        volumes:
          - /statedir:/statedir
      - name: "install-root-fs"
        image: ubuntu-workflow/install-root-fs:latest
        timeout: 1500
        environment:
          PROXY_HOST: 192.168.1.2
        volumes:
          - /statedir:/statedir